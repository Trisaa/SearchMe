<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ssearch_selector_list_item"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="5.0dip"
    android:paddingTop="5.0dip" >

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="@dimen/search_list_item_icon_size"
        android:layout_height="@dimen/search_list_item_icon_size"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/app_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:lines="2"
        android:paddingLeft="5.0dip"
        android:paddingRight="5.0dip"
        android:textColor="@color/ssearch_card_title"
        android:textSize="12.0sp" />

</LinearLayout>