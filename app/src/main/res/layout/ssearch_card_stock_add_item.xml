<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/stock_layout_item"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/search_card_stock_item_height"
    android:background="@drawable/ssearch_selector_list_item"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/ssearch_card_stock_manage_item"
        android:layout_width="fill_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/stock_right_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ssearch_selector_setting_item"
            android:duplicateParentState="false"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:src="@drawable/ssearch_ic_trash_dark"
            android:tint="@color/ssearch_common_subtitle" />

        <TextView
            android:id="@+id/stock_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="10.0dip"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLength="25"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/ssearch_card_title"
            android:textSize="17.0sp" />

        <TextView
            android:id="@+id/stock_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10.0dip"
            android:layout_toLeftOf="@id/stock_right_btn"
            android:layout_toRightOf="@id/stock_title"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/ssearch_card_summary"
            android:textSize="14.0sp" />
    </RelativeLayout>

    <include layout="@layout/ssearch_divider_horizontal" />

</LinearLayout>