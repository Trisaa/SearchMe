<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout style="@style/ssearch_card_item_layout" >

        <com.solo.search.card.view.CardHeaderView
            android:id="@+id/card_header"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/search_card_header_height" />

        <include layout="@layout/ssearch_divider_horizontal" />

        <LinearLayout
            android:id="@+id/video_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/search_card_video_padding" >

            <RelativeLayout
                android:id="@+id/card_video_layout1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/search_card_big_item_height"
                android:paddingLeft="12.0dip"
                android:paddingRight="12.0dip" >

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/funny_iv1"
                    style="@style/ssearch_card_item_iv" />

                <LinearLayout style="@style/ssearch_card_bottom_layout" >

                    <TextView
                        android:id="@+id/funny_title_tv1"
                        style="@style/ssearch_card_item_bottom_title" />

                    <TextView
                        android:id="@+id/funny_time_tv1"
                        style="@style/ssearch_card_item_time" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                style="@style/ssearch_card_video_layout"
                android:layout_marginTop="8.0dip" >

                <RelativeLayout
                    android:id="@+id/card_video_layout2"
                    style="@style/ssearch_card_video_item_layout" >

                    <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/funny_iv2"
                        style="@style/ssearch_card_item_iv" />

                    <LinearLayout style="@style/ssearch_card_bottom_layout" >

                        <TextView
                            android:id="@+id/funny_title_tv2"
                            style="@style/ssearch_card_item_bottom_title" />

                        <TextView
                            android:id="@+id/funny_time_tv2"
                            style="@style/ssearch_card_item_time" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/card_video_layout3"
                    style="@style/ssearch_card_video_item_layout" >

                    <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/funny_iv3"
                        style="@style/ssearch_card_item_iv" />

                    <LinearLayout style="@style/ssearch_card_bottom_layout" >

                        <TextView
                            android:id="@+id/funny_title_tv3"
                            style="@style/ssearch_card_item_bottom_title" />

                        <TextView
                            android:id="@+id/funny_time_tv3"
                            style="@style/ssearch_card_item_time" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/ssearch_card_footer" />
    </LinearLayout>

</LinearLayout>