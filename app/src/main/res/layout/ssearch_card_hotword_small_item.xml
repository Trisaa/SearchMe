<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hotword_layout"
    style="@style/ssearch_hotword_item_layout" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_hotword_item_height"
        android:background="@drawable/ssearch_selector_list_item"
        android:padding="4.0dip" >

        <TextView
            android:id="@+id/hotword_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:drawablePadding="3.0dip"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/ssearch_common_title" />
    </RelativeLayout>

</RelativeLayout>