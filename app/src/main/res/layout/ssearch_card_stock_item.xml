<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/search_card_stock_item_height"
    android:background="@drawable/ssearch_selector_list_item"
    android:orientation="vertical" >

    <include layout="@layout/ssearch_divider_horizontal" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingBottom="8.0dip"
        android:paddingLeft="14.0dip"
        android:paddingRight="14.0dip"
        android:paddingTop="8.0dip" >

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="6.0dip"
            android:layout_weight="6.0"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/card_stock_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="APPL"
                android:textColor="@color/ssearch_card_title"
                android:textSize="@dimen/search_card_title_text_size" />

            <TextView
                android:id="@+id/card_stock_ticker"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.0dip"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="APPL"
                android:textColor="@color/ssearch_card_summary"
                android:textSize="@dimen/search_card_summary_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/card_stock_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="6.0dip"
                android:singleLine="true"
                android:textColor="@color/ssearch_card_title"
                android:textSize="@dimen/search_card_title_text_size" />

            <TextView
                android:id="@+id/card_stock_pencentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.0dip"
                android:singleLine="true"
                android:textColor="@color/ssearch_stock_up"
                android:textSize="@dimen/search_card_summary_text_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>