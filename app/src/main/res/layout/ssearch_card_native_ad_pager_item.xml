<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/layout_ad_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/layout_fb_title"
            android:layout_width="fill_parent"
            android:layout_height="78.0dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/nativeAdIcon"
                android:layout_width="@dimen/search_card_ad_icon_size"
                android:layout_height="@dimen/search_card_ad_icon_size"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10.0dip"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/ad_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/nativeAdIcon"
                android:layout_marginRight="10.0dip"
                android:src="@drawable/ssearch_ad" />

            <LinearLayout
                android:id="@+id/layout_fb_title_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10.0dip"
                android:layout_toLeftOf="@id/ad_flag"
                android:layout_toRightOf="@+id/nativeAdIcon"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/nativeAdTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="title"
                    android:textColor="@color/ssearch_card_title"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/nativeAdBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="context"
                    android:textColor="@color/ssearch_card_summary"
                    android:textSize="12.0sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fb_ad_inner_cover_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12.0dip"
            android:layout_marginRight="12.0dip" >

            <ImageView
                android:id="@+id/nativeAdImage"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/search_card_ad_image_height"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />
        </RelativeLayout>

        <TextView
            android:id="@+id/nativeAdCallToAction"
            android:layout_width="fill_parent"
            android:layout_height="42.0dip"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12.0dip"
            android:layout_marginRight="12.0dip"
            android:layout_marginTop="15.0dip"
            android:background="@drawable/ssearch_selector_common_green_btn"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/search_card_ad_large_text_size"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>