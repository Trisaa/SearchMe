<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ssearch_card_item_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_history_layout_height" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ssearch_selector_list_item"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.0" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ssearch_ic_trash_dark"
                android:tint="@color/ssearch_card_summary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8.0dip"
                android:text="@string/ssearch_clean_history"
                android:textColor="@color/ssearch_card_summary"
                android:textSize="@dimen/search_history_item_font_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>